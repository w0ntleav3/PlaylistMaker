<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- общий стиль текста (базовый) -->
    <style name="Text" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/yandexsanstext_medium</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:lineHeight">22sp</item>
    </style>

    <style name="Text.Header" parent="Text.Medium">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- search bar text -->
    <style name="Text.SearchBar" parent="Text">
        <item name="android:textColor">@color/colorTextSearchBar</item>
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
    </style>

    <!-- settings / general small text -->
    <style name="Text.Settings" parent="Text">
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <!-- edittext in search -->
    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorButtonTextMain</item>
        <item name="android:textColorHint">@color/colorTextSearchBar</item>
        <item name="android:backgroundTint">@color/colorBackgroundSecondary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <!-- main screen button -->
    <style name="MainButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/yandexsanstext_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:elevation">8dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:textColor">@color/colorButtonTextMain</item>
        <item name="iconTint">@color/colorButtonTextMain</item>
        <item name="iconSize">24dp</item>
    </style>

    <!-- track text styles -->
    <style name="Text.TrackName" parent="Text">
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textSize">@dimen/track_name</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="Text.TrackAuthorDuration" parent="Text">
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textSize">@dimen/track_author_duration</item>
        <item name="android:textColor">?attr/colorTextSecondary</item>
    </style>
</resources>
