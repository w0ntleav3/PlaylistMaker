<resources>

    <style name="MainButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>

        <item name="android:background">@drawable/bg_main_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/yandexsanstext_medium</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>


        <!-- тень -->
        <item name="android:elevation">8dp</item>

        <!-- Иконки -->
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/button_icon_padding</item>
        <item name="android:textColor">@color/colorButtonTextMain</item>
        <item name="iconTint">@color/colorButtonTextMain</item>
        <item name="iconSize">24dp</item>
    </style>


    <style name="Text">
        <item name="android:fontFamily">@font/yandexsanstext_medium</item>
        <item name="android:textColor">?attr/colorText</item>
    </style>

    <style name="Text.Medium" parent="Text">
        <item name="android:textSize">22sp</item>
        <item name="android:lineHeight">22sp</item>

    </style>

    <style name="Text.Header" parent="Text.Medium">
        <item name="android:textColor">@color/colorWhite</item>



    </style>

    <style name="Text.SearchBar" parent="Text.Medium">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
    </style>

    <style name="Text.Settings" parent="Text">
        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textColor">?attr/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.Settings.Title" parent="Text.Settings">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/colorButtonTextMain</item>
        <item name="android:textColorHint">@color/colorTextSearchBar</item>
        <item name="android:backgroundTint">@color/colorBackgroundSecondary</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:lineHeight">24sp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>

    </style>

    <style name="Text.TrackName" parent="Text.Medium">

        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textSize">@dimen/track_name</item>
    </style>

    <style name="Text.TrackAuthorDuration" parent="Text.Medium">

        <item name="android:fontFamily">@font/yandexsanstext_regular</item>
        <item name="android:textSize">@dimen/track_author_duration</item>
    </style>







</resources>
