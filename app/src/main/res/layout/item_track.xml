<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_item_horizontal"
    android:paddingEnd="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground">

    <!-- Картинка -->
    <ImageView
        android:id="@+id/trackArtwork"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:src="@drawable/placeholder"
        android:background="@drawable/rounded_placeholder"/>

    <!-- Текстовая часть -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/margin_12dp"
        android:paddingEnd="@dimen/margin_8dp"
        android:gravity="center_vertical">

        <!-- Название трека -->
        <TextView
            android:id="@+id/trackName"
            style="@style/Text.TrackName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            tools:text="Название песни" />

        <!-- Исполнитель + длительность -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/artistName"
                style="@style/Text.TrackAuthorDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxWidth="200dp"
                tools:text="Исполнитель" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.TrackAuthorDuration"
                android:text=" • " />

            <TextView
                android:id="@+id/trackTime"
                style="@style/Text.TrackAuthorDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1:00" />
        </LinearLayout>
    </LinearLayout>

    <!-- Стрелочка -->
    <ImageView
        android:id="@+id/arrowRight"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chevron_right"
        app:tint="@color/colorTextSecondary" />
</LinearLayout>
